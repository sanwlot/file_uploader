<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>File Uploader</title>
  <style>
    /* Reset and font setup */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    .folder-link {
      all: unset;
      display: flex;
      align-items: center;
    }

    .upload-file {
      color: white;
    }

    body {
      font-family: Arial, sans-serif;
      /* min-height: 100vh; */
      background-color: #333;
      color: white;
    }

    h1 {
      font-size: 2em;
      color: white;
      margin-bottom: 1rem;
      text-align: center;
    }

    .user-info {
      display: flex;
      justify-content: center;
      gap: 2rem;
      align-items: center;
      margin-bottom: 1rem;
    }

    .user-info h3 {
      font-size: 1.2em;
    }

    .user-info a {
      text-decoration: none;
      color: #007bff;
      font-weight: bold;
      transition: color 0.3s;
    }

    .user-info a:hover {
      color: #0056b3;
    }

    .folder-list-container {
      background: white;
      padding: 1.5rem;
      margin: 1.5rem;
      border-radius: 8px;
      width: 100%;
      max-width: 300px;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    .folder-list-container h2 {
      font-size: 1.4em;
      margin-bottom: 1rem;
      color: #333;
    }

    .folder-list {
      list-style: none;
    }

    .folder-item {
      display: flex;
      align-items: center;
      padding: 0.8rem;
      border-radius: 5px;
      transition: background-color 0.2s;
      background-color: #333;
      cursor: pointer;
      margin-bottom: 10px;
    }

    .folder-item:hover {
      background-color: black;
    }

    .folder-icon {
      font-size: 1.5em;
      color: #007bff;
      margin-right: 0.6rem;
    }

    .folder-item span {
      font-size: 1em;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 0.8rem;
      padding: 1rem;
      border: 1px solid #ddd;
      border-radius: 8px;
      background: white;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    label {
      font-size: 0.9em;
      color: #555;
    }

    input {
      padding: 0.5rem;
      font-size: 1em;
      border: 1px solid #ddd;
      border-radius: 4px;
    }

    button {
      padding: 0.6rem;
      font-size: 1em;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    button:hover {
      background-color: #0056b3;
    }
  </style>
</head>



<body>
  <h1>FILE UPLOADER</h1>
  <% if (locals.user) {%>
  <div class="user-info">
    <h3><%= user.name %></h3>
    <a href="/log-out">LOG OUT</a>
  </div>
  <div>
    <a class="upload-file" href="/file-upload">Upload a file</a>
  </div>

  <div class="folder-list-container">
    <h2>Folders</h2>
    <form action="/folders/new-folder" method="post">
      <label for="new-folder">New folder name</label>
      <input type="text" name="newFolder" id="new-folder">
      <button>Create</button>
    </form>
    <ul class="folder-list">
      <% locals.folders.forEach(folder => { %>
      <% if(folder.userId === locals.user.id) { %>
      <li class="folder-item">
        <a class="folder-link" href="/folders/<%= folder.id %>">
          <div class="folder-icon">&#128193;</div>
          <span><%= folder.name %></span>
          <form action="/folders/delete/<%= folder.id %>" method="POST">
            <button>Delete</button>
          </form>
        </a>
      </li>
      <% } %>
      <% }) %>
    </ul>
  </div>
  <% } else { %>
  <h1>please log in</h1>
  <form action="/log-in" method="POST">
    <label for="email">Email</label>
    <input id="email" name="email" placeholder="email" type="email" />
    <label for="password">Password</label>
    <input id="password" name="password" type="password" />
    <button>Log In</button>
  </form>
  <%}%>
</body>
</html>